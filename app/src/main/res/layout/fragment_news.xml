<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android">
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent">

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/user"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="0dp"
            android:src="@drawable/user" />


        <include
            layout="@layout/search_bar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="4dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="4dp"
            android:layout_weight="2" />

        <TextView
            android:id="@+id/currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="USD"
            android:textColor="@color/default_black_color"
            android:textSize="16sp" />

        <ImageViewgit remote add origin https://github.com/A7ak/crypto-compare-clone.git
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_expand_more_black_24dp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>

<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="#AFA9A9" />

<TextView android:id="@+id/text_notifications"

<TextView android:id="@+id/text_notifications"

<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/top_constraint_news"
    app:layout_constraintBottom_toTopOf="@+id/recycler_view_news"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <View
        app:layout_constraintBottom_toBottomOf="@+id/top_constraint_news"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#28000000" />
</androidx.constraintlayout.widget.ConstraintLayout>

<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/recycler_view_news"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:textAlignment="center"
    android:textSize="20sp" />
